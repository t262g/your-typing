<div class="wrapper">
  <%= form_with model: @quiz, url: quizzes_path, local: true do |f| %>
    <div class="quiz-form">
      <div class="error-message">
        <%= render "shared/error_messages", resource: f.object %>
      </div>
      <p class="title">クイズ新規登録</p>
      <div class="quiz">
        <div class="quiz-input">
          <%= f.label :title, "クイズのタイトル", class: "quiz-label" %>
          <%= f.text_field :title, class: "quiz-field", placeholder: "例) 英単語クイズ", autofocus: true %>
        </div>
        <div class="quiz-input">
          <%= f.label :explanation, "クイズの説明", class: "quiz-label" %>
          <%= f.text_area :explanation, class: "quiz-area", placeholder: "例) 日本語を英語に直しましょう" %>
        </div>
      </div>
      <div class="submit-btn">
        <%= f.submit "クイズ概要登録" %>
      </div>
    </div>
  <% end %>
</div>