<div class="wrapper">
  <%= form_with model: @quiz_management, url: quiz_path(@quiz), method: :patch, local: true do |f| %>
    <div class="quiz-form">
      <div class="error-message">
        <%= render "shared/error_messages", resource: f.object %>
      </div>
      <p class="title">クイズ編集</p>
      <ul class="explanation-list">
        <li>・問題と答えを両方セットで記入してください</li>
        <li>・最低3セットが必要になります</li>
        <li>・問題数を編集前より増やしたいときは下のボタンを押してください</li>
      </ul>
      <div class="quiz-set">
        <div class="quiz-input">
          <%= f.label :title, "クイズのタイトル", class: "quiz-label" %>
          <%= f.text_field :title, class: "quiz-field", value: @quiz.title, placeholder: "例) 英単語クイズ", autofocus: true %>
        </div>
        <div class="quiz-input">
          <%= f.label :explanation, "クイズの説明", class: "quiz-label" %>
          <%= f.text_area :explanation, class: "quiz-area", value: @quiz.explanation, placeholder: "例) 日本語を英語に直しましょう" %>
        </div>
      </div>
      <div id="all_quiz">
        <% i = 0 %>
        <% while i < @quiz_lists.length %>
          <div class="quiz-set">
            <div class="quiz-input">
              <%= f.label :question, "問題", class: "quiz-label" %>
              <%= f.text_area :question, index: i, class: "quiz-area", value: @quiz_lists[i].question, placeholder: "例) 英語" %>
            </div>
            <div class="quiz-input">
              <%= f.label :answer, "答え", class: "quiz-label" %>
              <%= f.text_field :answer, index: i, class: "quiz-field", value: @quiz_lists[i].answer, placeholder: "例) english" %>
            </div>
          </div>
          <% i += 1 %>
        <% end %>
      </div>
      <div class="buttons", id="buttons">
        <div class="increase-btn", id="increase">
          問題数を増やす
        </div>
        <div class="submit-btn">
          <%= f.submit "クイズ編集" %>
        </div>
      </div>
    </div>
  <% end %>
</div>