<div class="wrapper">
  <%= form_with model: @user, url: user_path, method: :patch, local: true do |f| %>
    <div class="form">
      <div class="error-message">
        <%= render "shared/error_messages", resource: f.object %>
      </div>
      <p class="title">ユーザー情報更新</p>
      <div class="user-input">
        <%= f.label :nickname, "ニックネーム", class: "user-label" %>
        <%= f.text_field :nickname, class: "user-field", placeholder:"例) クイズ一郎", autofocus: true, value: @user.nickname %>
      </div>
      <div class="user-input">
        <%= f.label :image, "ユーザーアイコン", class: "user-label" %>
        <%= f.file_field :image %>
      </div>
      <div class="submit-btn">
        <%= f.submit "更新" %>
      </div>
    </div>
  <% end %>
</div>