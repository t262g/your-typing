<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div>
      <div>
        <p>ニックネーム</p>
        <%= f.text_field :nickname, placeholder:"例) タイプ一郎", autofocus: true %>
      </div>
      <div>
        <p>メールアドレス</p>
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可"%>
      </div>
      <div>
        <p>パスワード</p>
        <%= f.password_field :password, placeholder:"6文字以上" %>
      </div>
      <div>
        <p>パスワード(確認)</p>
        <%= f.password_field :password_confirmation, placeholder:"もう一度入力" %>
      </div>
      <div>
        <%= f.submit "登録" %>
      </div>
    </div>
<% end %>
